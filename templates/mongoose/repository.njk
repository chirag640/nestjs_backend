import { Injectable } from '@nestjs/common';
import { InjectModel } from '@nestjs/mongoose';
import { Model } from 'mongoose';
import { {{ model.name }}Document } from './schemas/{{ model.fileName }}.schema';

@Injectable()
export class {{ model.name }}Repository {
  constructor(
    @InjectModel('{{ model.name }}')
    private readonly model: Model<{{ model.name }}Document>,
  ) {}

  async create(data: Partial<{{ model.name }}Document>): Promise<{{ model.name }}Document> {
    const created = await this.model.create(data);
    return created.toObject();
  }

  async findAll(): Promise<{{ model.name }}Document[]> {
    return this.model.find().lean().exec();
  }

  async findById(id: string): Promise<{{ model.name }}Document | null> {
    return this.model.findById(id).lean().exec();
  }

  async update(
    id: string,
    data: Partial<{{ model.name }}Document>,
  ): Promise<{{ model.name }}Document | null> {
    return this.model.findByIdAndUpdate(id, data, { new: true }).lean().exec();
  }

  async remove(id: string): Promise<{{ model.name }}Document | null> {
    return this.model.findByIdAndDelete(id).lean().exec();
  }
}
